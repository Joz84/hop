<div class="banner">
  <div class="banner-content">
    <h1>Mettez vous en avant facilement et en quelques clics</h1>
    <p class="intro">Créez votre site web personnalisé en quelques minutes.</p>
    <% if current_user %>
      <% if website = current_user.website %>
        <% if website.url.present? %>
          <%= link_to 'Personnaliser mon site', edit_own_website_url(host: website.host), class: 'link' %></li>
        <% else %>
          <%= link_to 'Personnaliser mon site', edit_website_url(website), class: 'link' %></li>
        <% end %>
      <% else %>
        <%= button_to 'Créer mon site', websites_path, method: :post, class: 'button' %>
      <% end %>
    <% else %>
      <%= link_to 'Créer mon site', new_user_session_path, class: 'button' %>
    <% end %>
  </div>
</div>
